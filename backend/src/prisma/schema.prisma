// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                    String @id @unique
  name                  String
  email                 String @unique
  password              String
  transactions          Transaction[]

}

model Transaction{
  id                    String @id @unique
  user                  User @relation(fields: [userId], references: [id])
  userId                String
  bancoOrigem           String
  agenciaOrigem         String
  contaOrigem           String
  bancoDestino          String
  agenciaDestino        String
  contaDestino          String
  valorTransacao        String
  dataTransacao         DateTime

}